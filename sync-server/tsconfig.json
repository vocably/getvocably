{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["*.mts", "*.ts"],
  "exclude": ["node_modules"]
}
