{{#> layout
  title='Language Flashcards'
  url='/'
  hideNavBar=true
}}
  <style>
    :root {
      --hero-bg-color-byte: 250;
    }

    .hero-slide {
      border-radius: 2rem;
      overflow: hidden;

      display: flex;

      width: 260px;
      height: 480px;

      & .image-shadow {
        filter: drop-shadow(0px 4px 20px rgba(0, 0, 0, 0.4));
      }
    }

    @media (min-width: 1400px) {
      .hero-slide {
        width: 640px;
        height: 400px;
      }
    }

    @media (min-width: 2000px) {
      .hero-slide {
        width: 800px;
        height: 400px;
      }
    }

    .hero-container {
      position: relative;
    }

    @media (min-width: 768px) {
      .hero-container {
        min-height: 600px;
      }
    }

    :root {
      --hero-overlap: 200px;
    }

    .gradient-headline {
      background: linear-gradient(#555, #222, #555);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .headline {
      & .headline-text {
        margin: 5rem 0;
        font-size: 2.5rem;
        line-height: 3rem;
      }
    }

    @media (min-width: 768px) {
      .headline {
        position: absolute;
        left: 0;
        right: 40%;
        bottom: 0;
        top: 0;
        margin-right: calc(var(--hero-overlap) * -1);
        padding-right: var(--hero-overlap);
        pointer-events: none;
        background: linear-gradient(
          to left,
          rgba(255, 255, 255, 0) var(--hero-overlap),
          rgba(257, 255, 255, 1) calc(var(--hero-overlap) + 75px),
          rgba(257, 255, 255, 1)
        );

        & .headline-text {
          margin: 0;
        }
      }

      .slides {
        position: absolute;
        left: 60%;
        right: 0;
        bottom: 0;
        top: 0;
        margin-left: calc(var(--hero-overlap) * -1);

        .vertical-center {
          position: relative;
          top: 50%;
          transform: translateY(calc(-50% + 50px));
        }
      }
    }

    @media (min-width: 992px) {
      .headline {
        right: 50%;
      }

      .slides {
        left: 50%;
      }
    }

    .navigation-button {
      border-radius: 50%;
      padding: 0;
      width: 50px;
      height: 50px;
      border: none;
      color: #333;
      background-color: #eee;
    }

    .navigation-button:disabled {
      color: #ccc;
    }
  </style>
  <div class="hero-container">
    <div class="headline d-flex flex-column align-items-md-end justify-content-center z-1 ps-md-0">
      <div class="p-4 py-md-0 me-md-5" style="pointer-events: all">
        <div class="mb-3">
          <img src="assets/logo.svg" style="height: 1.5rem;" alt="Vocably" />
        </div>
        <h1 class="headline-text gradient-headline mb-2">
          A language <span style="white-space: nowrap;">learning tool</span>
        </h1>
        <div class="mb-2 small">
          for <a href="/for-active-language-users.html">active language users</a>.
        </div>
        <style>
          .word-carousel {
            --height: calc(var(--bs-body-line-height) * 1.4rem);

            font-size: 90%;
            display: inline-flex;
            flex-direction: column;
            height: var(--height);
            line-height: var(--height);
            border: none;
            vertical-align: baseline;
            overflow: hidden;
            background-color: var(--bs-primary);
            color: #fff;
            text-align: center;
            border-radius: 8px;
            padding-left: 12px;
            padding-right: 12px;
            margin-right: 0.3rem;
            cursor: default;

            span {
              line-height: var(--height);
              position: relative;
              top: 0;

              &.move {
                transition: top 0.5s ease-in-out;
                top: calc(var(--height) * -1);
              }
            }
          }
        </style>
        <ul style="list-style: none; padding-left: 0;">
          <li>
            <div class="word-carousel" id="word-carousel" data-bs-toggle="tooltip" data-bs-title="Vocably is an ecosystem that helps with learning a language while using it."><span>Read</span><span>Surf</span><span>Speak</span><span>Think</span></div>in a foreign language.
          </li>
          <li>
            <i class="bi bi-cloud align-middle"></i>
            Save and learn every word you discover.
          </li>
        </ul>
        <script>
          const wordCarousel = document.getElementById('word-carousel');
          const slide = () => {
            setTimeout(() => {
              wordCarousel.children[0].classList.add('move');
              wordCarousel.children[1].classList.add('move');

              setTimeout(() => {
                wordCarousel.children[0].classList.remove('move');
                wordCarousel.children[1].classList.remove('move');
                wordCarousel.appendChild(wordCarousel.children[0]);
                slide();
              }, 500);
            }, 3000);
          }
          slide();
        </script>
        <div class="mt-4 d-none d-md-block">
          <div class="w-100 w-xl-75">
            {{> cta }}
          </div>
        </div>
      </div>
    </div>
    <div class="slides z-0 ps-4 ps-md-0">
      <div class="vertical-center">
        <swiper-container id="swiper" init="false" slides-per-view="auto">
          <swiper-slide
